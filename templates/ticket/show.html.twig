{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
	<h1>Ticket</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ ticket.id }}</td>
			</tr>
			<tr>
				<th>Numero</th>
				<td>{{ ticket.numero }}</td>
			</tr>
			<tr>
				<th>Date_depot</th>
				<td>{{ ticket.dateDepot ? ticket.dateDepot|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Weight</th>
				<td>{{ ticket.weight }}</td>
			</tr>
			<tr>
				<th>Unit</th>
				<td>{{ ticket.unit }}</td>
			</tr>
		</tbody>
	</table>
		<a href="{{path('connected_homepage')}}"><button class="btn btn-default btn-back">Retour</button></a>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>
	{{ include('ticket/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}